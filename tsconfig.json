{
    "compilerOptions": {
      "outDir": "./tsc",
        "skipLibCheck": true,
        "strictFunctionTypes": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
    },
    "exclude": [
        "node_modules/"
    ],
    "include": [
      "src/components/**/*.ts",
      "src/components/**/*.tsx",
      "src/index.tsx"
    ]
}
